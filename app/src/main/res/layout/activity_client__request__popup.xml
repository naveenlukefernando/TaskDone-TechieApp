<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".Client_Request_Popup">


    <!--<de.hdodenhof.circleimageview.CircleImageView-->
        <!--android:id="@+id/map_image_request"-->
        <!--android:layout_width="200dp"-->
        <!--android:layout_height="200dp"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_marginTop="145dp"-->

        <!--android:src="@drawable/map"-->
        <!--app:civ_border_color="@android:color/holo_green_dark"-->
        <!--app:civ_border_width="5dp" />-->




    <LinearLayout
        android:id="@+id/map_Image_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Alert"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textAlignment="center"
            />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            app:srcCompat="@mipmap/icon_pp_back_no" />

        <TextView
            android:id="@+id/txtTime"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />

        <TextView
            android:id="@+id/txt_Distance"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />

        <TextView
            android:id="@+id/txtAddress"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/accept_btn"
                android:layout_width="127dp"
                android:layout_height="42dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/button_accept"
                android:text="Accept"
                android:textSize="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


            <Button
                android:id="@+id/decline_btn"
                android:layout_width="127dp"
                android:layout_marginLeft="10dp"
                android:layout_height="42dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/button_decline"
                android:text="Decline"
                android:textSize="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />



        </LinearLayout>



    </LinearLayout>



</RelativeLayout>